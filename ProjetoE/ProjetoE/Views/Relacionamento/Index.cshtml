@model IEnumerable<ProjetoE.Models.cao_dono>

@{
    ViewBag.Title = "Relacionamento";
}

<h2>Relacionamento Cão-Dono</h2>

<p>
    @Html.ActionLink("Relacionar Dono-Cão", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Dono")
        </th>
        <th>
            @Html.Label("Cão")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome_Dono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome_Cao)
        </td>
        <td>
            @Html.ActionLink("Deletar", "Delete", new { id=item.ID_cao_dono })
        </td>
    </tr>
}

</table>
