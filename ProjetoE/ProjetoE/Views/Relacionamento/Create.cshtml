@model ProjetoE.Models.cao_dono

@{
    ViewBag.Title = "Relacionar";
}

<h2>Relacionamento Cão-Dono</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Aqui você fará o relacionamento entre Cão e Dono, favor selecionar e clicar em 'Relacionar'</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Dono", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_dono", new SelectList(ViewBag.Donos, "ID_Dono", "Nome"), new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cão", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_cao", new SelectList(ViewBag.Caes, "ID_cao", "Nome"), new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Relacionar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retornar para Lista","Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
