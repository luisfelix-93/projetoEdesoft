@model ProjetoE.Models.cao_dono

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que quer deletar?</h3>
<div>
    <h4>Relacionamento Cão-Dono</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Dono")
        </dt>

        <dd>
            @Html.Label("Cão")
        </dd>

        <dt>
            @Html.DisplayFor(model => model.Nome_Dono)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome_Cao)
        </dd>

